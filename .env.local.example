# NextAuth.js Configuration
# Generate a secret using: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-secret-here

# Google OAuth Configuration
# Get these from https://console.developers.google.com/
# Make sure to add http://localhost:3000/api/auth/callback/google as redirect URI
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Optional: Printify API (for t-shirt creation)
# Get from https://printify.com/
PRINTIFY_API_KEY=your-printify-api-key-here

# Optional: OpenAI API (for AI image generation)
# Get from https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key-here
